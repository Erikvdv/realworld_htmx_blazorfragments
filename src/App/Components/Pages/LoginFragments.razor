@using RealworldBlazorHtmx.App.Components.Shared
@code {

    public static RenderFragment RenderLogin =>
        @<div class="auth-page">
            <div class="container page">
                <div class="row">
                    <div class="col-md-6 offset-md-3 col-xs-12">
                        <h1 class="text-xs-center">Sign in</h1>
                        <p class="text-xs-center">
                            <a href="/register">Need an account?</a>
                        </p>
                        @RenderLoginForm(null)
                    </div>
                </div>
            </div>
        </div>;
    
    public static readonly RenderFragment<Dictionary<string, string[]>?> RenderLoginForm = errors =>
        @<form hx-post="/login" hx-include="[name='Email'],[name='Password']">
            @SharedFragments.RenderErrors(errors)
            <fieldset class="form-group">
                <input class="form-control form-control-lg" type="text" placeholder="Email" name="Email"/>
            </fieldset>
            <fieldset class="form-group">
                <input class="form-control form-control-lg" type="password" placeholder="Password" name="Password"/>
            </fieldset>
            <button class="btn btn-lg btn-primary pull-xs-right">Sign in</button>
        </form>;

}